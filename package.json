{
  "name": "electron-transcriber",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 1422",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite --port 1422\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:1422 electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.3.4",
    "electron": "^30.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.0",
    "electron-builder": "^24.9.1",
    "cross-env": "^7.0.3"
    ,"concurrently": "^8.2.2"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.electron.transcriber",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "sidecar-wasapi/**/*"
    ],
    "extraResources": [
      {
        "from": "sidecar-wasapi/target/release/sidecar-wasapi.exe",
        "to": "wasapi-capture.exe"
      }
    ]
  }
}
