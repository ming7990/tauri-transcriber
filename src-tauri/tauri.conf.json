{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "tauri-transcriber",
  "version": "1.0.0",
  "identifier": "com.tauri.transcriber",
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-transcriber",
        "width": 68,
        "height": 32,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "shadow": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "window": {
      "label": "bubble",
      "url": "bubble.html",
      "x": 372,
      "y": 1824
    },
    "acl": {
      "all": false,
      "permissions": {
        "window": {
          "scope": ["main", "bubble", "transcriber-main"],
          "allow": [
            "start-dragging",
            "set-resizable",
            "set-position",
            "set-size",
            "set-decorations",
            "set-always-on-top",
            "create",
            "center",
            "set-focus"
          ]
        },
        "webview": {
          "scope": ["main", "bubble", "transcriber-main"],
          "allow": ["internal-toggle-devtools", "create-webview-window"]
        }
      }
    }
  }
}
