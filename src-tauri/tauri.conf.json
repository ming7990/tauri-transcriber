{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "tauri-transcriber",
  "version": "1.0.0",
  "identifier": "com.tauri.transcriber",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-transcriber",
        "width": 140,
        "height": 140,
        "decorations": false,
        "transparent": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}